{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"paths": {
			"@/*": ["./src/*"],
			"@/public/*": ["./public/*"],
			"@/screens/*": ["./src/components/screens/*"],
			"@/ui/*": ["./src/components/ui/*"],
			"@/components/*": ["./src/components/*"],
			"@/pages/*": ["./src/pages/*"],
			"@/providers/*": ["./src/providers/*"],
			"@/shared/*": ["./src/shared/*"]
		},
		"strictNullChecks": true,
		"target": "ES2017"
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"src/components/layout/Sidebar/Search/PostsList",
		"src/components/layout/Sidebar/Search/Users/UsersList",
		"next.config.ts"
	],
	"exclude": ["node_modules"]
}
